<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_background"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            >


            <android.support.design.widget.TextInputLayout
                android:id="@+id/email_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTextView"
                android:layout_marginTop="24dp"
                android:textColorHint="@color/colorText"
                >


                <TextView
                    android:textSize="48sp"
                    android:textColor="@color/colorText"
                    android:text="LetzChat"
                    android:fontFamily="cursive"
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/colorText"
                    android:hint="Email"
                    android:theme="@style/Custom.EditText"
                    />

            </android.support.design.widget.TextInputLayout>


            <EditText
                android:id="@+id/passwordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorText"
                android:hint="Password"
                android:theme="@style/Custom.EditText"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/password_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/email_hint"
                android:textColorHint="@color/colorText"
                >


            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/password_hint"
                android:background="@color/colorAccent"
                android:textColor="@color/colorText"
                android:text="LOGIN"
                />

            <LinearLayout
                android:id="@+id/forgotLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="60dp"
                android:layout_below="@+id/loginButton">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/registerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_below="@+id/forgotLayout">

            </LinearLayout>

            <Button
                android:layout_below="@+id/loginButton"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="44dp"
                android:layout_marginTop="24dp"
                android:id="@+id/forgotButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/colorText"
                android:text="FORGOT YOUR PASSWORD?"

                />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="21dp" />


            <Button
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColor="@color/colorText"
                android:text="REGISTER NOW"
                android:layout_marginEnd="25dp"
                android:layout_below="@+id/forgotButton"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="11dp" />

            <TextView
                android:id="@+id/registerTextView"
                android:textColor="@color/colorText"
                android:text="Not Registered Yet?"
                android:layout_alignBaseline="@+id/registerButton"
                android:layout_alignBottom="@+id/registerButton"
                android:layout_toStartOf="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginEnd="17dp" />


        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>


</merge>